{
  "name": "sumulige-notebooklm-mcp",
  "version": "1.2.1",
  "description": "MCP server for NotebookLM API with session support and human-like behavior",
  "type": "module",
  "bin": {
    "sumulige-notebooklm-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "prepare": "npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "notebooklm",
    "gemini",
    "ai",
    "claude",
    "sumulige"
  ],
  "author": "sumulige",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumulige/sumulige-notebooklm-mcp.git"
  },
  "homepage": "https://github.com/sumulige/sumulige-notebooklm-mcp#readme",
  "bugs": {
    "url": "https://github.com/sumulige/sumulige-notebooklm-mcp/issues"
  },
  "files": [
    "dist",
    "README.md",
    "NOTEBOOKLM_USAGE.md",
    "LICENSE",
    "docs"
  ],
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "async-lock": "^1.4.1",
    "dotenv": "^16.4.0",
    "env-paths": "^3.0.0",
    "eventemitter3": "^5.0.4",
    "fastify": "^5.7.1",
    "globby": "^14.1.0",
    "patchright": "^1.48.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.2",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
